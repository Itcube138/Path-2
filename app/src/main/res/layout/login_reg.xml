<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="188dp"
        android:layout_height="45dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="396dp"
        android:text="Или войдите с помощью"
        android:textSize="40px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="246dp"
        android:layout_height="30dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="88dp"
        android:text="Добро пожаловать!"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hello" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="303dp"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="1dp"
        android:text="Войдите, чтобы пользоваться функциями приложения"
        android:textSize="40px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="73dp"
        android:text="Вход по E-mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/E_mail"
        android:layout_width="329dp"
        android:layout_height="62dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="11dp"
        android:background="#C1C1C1"
        android:ems="10"
        android:hint="example@mail.ru"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/Log"
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="#5364FF"
        android:fontFamily="sans-serif"
        android:text="Далее"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/E_mail" />

    <Button
        android:id="@+id/SplashYA"
        android:layout_width="331dp"
        android:layout_height="55dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="161dp"
        android:backgroundTint="#FFFDFD"
        android:text="Войти с Яндекс"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>